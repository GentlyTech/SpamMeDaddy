<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpamMeDaddy" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/niceBlue</item>
        <item name="colorSecondary">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="cardBackgroundColor">@color/offWhite</item>
        <item name="materialButtonStyle">@style/customButton</item>

        <item name="vectorImageFill">@color/black</item>
    </style>

    <declare-styleable name="vectorImage">
        <attr name="vectorImageFill" format="color" />
    </declare-styleable>

    <style name="customButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="customCard" parent="Theme.SpamMeDaddy">
        <item name="cardBackgroundColor">@color/offWhite</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="customToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="background">@color/white</item>
        <item name="titleTextColor">@color/black</item>
        <item name="subtitleTextColor">@color/darkerGray</item>
    </style>

    <style name="customFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/white</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
    </style>
</resources>
