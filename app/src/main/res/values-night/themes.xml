<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpamMeDaddy" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/darkerNiceBlue</item>
        <item name="colorSecondary">@color/darkerGray</item>

        <item name="android:windowBackground">@color/notQuiteBlack</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="materialButtonStyle">@style/customButton</item>

        <item name="vectorImageFill">@color/white</item>
    </style>

    <style name="customCard" parent="Theme.SpamMeDaddy">
        <item name="cardBackgroundColor">@color/darkerGray</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="customToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="background">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/gray</item>
    </style>

    <style name="customFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/white</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
    </style>
</resources>
